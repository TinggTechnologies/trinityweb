# Database Configuration - Local
DB_HOST_LOCAL=localhost
DB_USER_LOCAL=root
DB_PASS_LOCAL=
DB_NAME_LOCAL=trinitydistribution_trinity

# Database Configuration - Production
DB_HOST_PROD=localhost
DB_USER_PROD=your_db_user
DB_PASS_PROD=your_db_password
DB_NAME_PROD=your_db_name

# Application URLs - Local
APP_URL_LOCAL=http://localhost/trinity
FRONTEND_URL_LOCAL=http://localhost/trinity/ng
